# MySQL Database Configuration
# Copy this file to .env and fill in the values

# Database Connection
DB_HOST=localhost
DB_PORT=3306
DB_NAME=monolitic_db
DB_USERNAME=monolitic_user
DB_PASSWORD=monolitic_password

# MySQL Root Password (for docker-compose)
MYSQL_ROOT_PASSWORD=rootpassword

# Connection Pool Configuration (Optional - defaults shown)
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA/Hibernate Configuration (Optional - defaults shown)
DB_DDL_AUTO=update
DB_SHOW_SQL=true
DB_FORMAT_SQL=true
DB_USE_SQL_COMMENTS=true

# Nginx Proxy Configuration (for docker-compose)
# Nginx uses host.docker.internal to proxy to host machine (port 8080)
# NGINX_PORT: Port for nginx to listen on (default: 80)
NGINX_PORT=80

# App Proxy Configuration (for nginx in docker-compose)
# NGINX_APP_HOST: Host address for nginx to proxy to (default: host.docker.internal)
NGINX_APP_HOST=host.docker.internal
# NGINX_APP_PORT: Port for the application (default: 8080)
NGINX_APP_PORT=8080
# NGINX APP_PATH_PREFIX: Path prefix to remove before forwarding (default: /api)
NGINX_APP_PATH_PREFIX=/api

