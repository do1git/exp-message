# MySQL 기본 설정
# 이 파일은 Docker Compose와 Kubernetes에서 공통으로 사용할 수 있는 설정 값입니다.

# MySQL 이미지 및 버전
MYSQL_IMAGE=mysql:8.0
MYSQL_VERSION=8.0

# MySQL Root 계정
MYSQL_ROOT_PASSWORD=rootpassword

# 데이터베이스 정보
MYSQL_DATABASE=message_db
MYSQL_DB_NAME=message_db

# MySQL 사용자 계정
MYSQL_USER=message_user
MYSQL_PASSWORD=message_password

# 포트 설정
MYSQL_PORT=3306
MYSQL_HOST_PORT=3306

# 컨테이너 이름
MYSQL_CONTAINER_NAME=mysql-monolitic-local

# 볼륨 이름
MYSQL_VOLUME_NAME=mysql_data

# Binlog 설정
MYSQL_BINLOG_FORMAT=ROW
MYSQL_BINLOG_EXPIRE_DAYS=7
MYSQL_BINLOG_MAX_SIZE=100M

# 성능 설정
MYSQL_INNODB_BUFFER_POOL_SIZE=256M
MYSQL_INNODB_LOG_FILE_SIZE=64M

# Health Check 설정
MYSQL_HEALTHCHECK_INTERVAL=10s
MYSQL_HEALTHCHECK_TIMEOUT=5s
MYSQL_HEALTHCHECK_RETRIES=5

