# Copy to .env and customize

# MySQL
MYSQL_ROOT_PASSWORD=rootpassword
DB_NAME=monolitic_db
DB_USERNAME=monolitic_user
DB_PASSWORD=monolitic_password

# Connection Pool
DB_MAX_POOL_SIZE=10
DB_MIN_IDLE=5
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000

# JPA/Hibernate
DB_DDL_AUTO=update
DB_SHOW_SQL=true
DB_FORMAT_SQL=true
DB_USE_SQL_COMMENTS=true

# Redis (compose 내부는 redis 서비스명 사용, 비밀번호만 여기서 설정)
REDIS_PASSWORD=

# Nginx
NGINX_PORT=80
NGINX_APP_HOST=00-monolitic
NGINX_APP_PORT=8080
NGINX_APP_PATH_PREFIX=/api
NGINX_LANDING_HOST=web-landing
NGINX_LANDING_PORT=80
NETWORK_DELAY_MS=50
